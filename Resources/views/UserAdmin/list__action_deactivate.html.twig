{% if admin.isAdmin() and admin.isGranted('DELETE', object) and admin.hasRoute('delete') %}
    <a href="{{ admin.generateObjectUrl('delete', object) }}" class="btn btn-sm btn-default delete_link" title="{{ 'link_deactivate'|trans({}, 'SonataUserBundle') }}">
        <i class="glyphicon glyphicon-remove"></i>
        {{ 'link_deactivate'|trans({}, 'SonataUserBundle') }}
    </a>
{% endif %}
