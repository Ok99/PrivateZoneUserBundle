<?xml version="1.0" ?>
<constraint-mapping xmlns="http://symfony.com/schema/dic/constraint-mapping"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/constraint-mapping
        http://symfony.com/schema/dic/constraint-mapping/constraint-mapping-1.0.xsd">

    <class name="Ok99\PrivateZoneCore\UserBundle\Entity\User">
        <property name="firstname">
            <constraint name="NotBlank">
                <option name="message">fos_user.firstname.blank</option>
                <option name="groups">
                    <value>Registration</value>
                    <value>Profile</value>
                </option>
            </constraint>
            <constraint name="Length">
                <option name="max">255</option>
                <option name="maxMessage">fos_user.firstname.long</option>
                <option name="groups">
                    <value>Registration</value>
                    <value>Profile</value>
                </option>
            </constraint>
        </property>

        <property name="lastname">
            <constraint name="NotBlank">
                <option name="message">fos_user.lastname.blank</option>
                <option name="groups">
                    <value>Registration</value>
                    <value>Profile</value>
                </option>
            </constraint>
            <constraint name="Length">
                <option name="max">255</option>
                <option name="maxMessage">fos_user.lastname.long</option>
                <option name="groups">
                    <value>Registration</value>
                    <value>Profile</value>
                </option>
            </constraint>
        </property>

        <property name="regnum">
            <constraint name="NotBlank">
                <option name="message">fos_user.regnum.blank</option>
                <option name="groups">
                    <value>Registration</value>
                    <value>Profile</value>
                </option>
            </constraint>
        </property>

        <property name="dateOfBirth">
            <constraint name="NotBlank">
                <option name="message">fos_user.date_of_birth.blank</option>
                <option name="groups">
                    <value>Registration</value>
                    <value>Profile</value>
                </option>
            </constraint>
            <constraint name="DateTime">
                <option name="message">fos_user.date_of_birth.wrong</option>
                <option name="groups">
                    <value>Registration</value>
                    <value>Profile</value>
                </option>
            </constraint>
        </property>

        <property name="sportident">
            <constraint name="Type">
                <option name="type">numeric</option>
                <option name="message">fos_user.sportident.wrong</option>
                <option name="groups">
                    <value>Registration</value>
                    <value>Profile</value>
                </option>
            </constraint>
        </property>
    </class>
</constraint-mapping>
